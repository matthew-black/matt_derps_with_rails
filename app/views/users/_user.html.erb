<div id="<%= dom_id user %>">
  <p>
    <strong>Name:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>
  
  <% if params[:controller] == "users" && params[:action] == "show" %>
    <strong>Created At:</strong>
    <%= user.created_at %>
  <% end %>
</div>
